@page
@model HardwareInventoryTrackingSystem.Account.LoginModel




<div class="container py-5 h-100 gradient-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card text-white" style="border-radius: 1rem; background-color: #1A3E59;">
                <div class="card-body p-5 text-center">
                    <!-- Welcome Message -->
                    <h1 class="fw-bold mb-4" style="font-size: 1.75rem;">Welcome to Hardware Inventory System!</h1>

                    <form method="post">
                        <input type="hidden" name="returnUrl" value="@Request.Query["ReturnUrl"]" />
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="mb-md-5 mt-md-4 pb-5">

                            <!-- Login Heading -->
                            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                            <p class="text-white-50 mb-5">Please enter your username and password.</p>

                            <div data-mdb-input-init class="form-outline form-white mb-4">
                                <input type="text" asp-for="Input.UserName" class="form-control form-control-lg" placeholder="Enter username" />
                                <span class="text-danger" asp-validation-for="Input.UserName"></span>
                            </div>

                            <div data-mdb-input-init class="form-outline form-white mb-4">
                                <input type="password" asp-for="Input.Password" id="typePasswordX" class="form-control form-control-lg" placeholder="Enter password" />
                                <span class="text-danger" asp-validation-for="Input.Password"></span>
                            </div>

                            <div class="mb-4">
                                <input type="submit" class="btn btn-primary" value="Login" />
                            </div>
                        </div>

                        <div>
                            <p class="mb-0">
                                Don't have an account? <a asp-page="/Account/Register" class="text-white-50 fw-bold">Sign Up</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .gradient-custom {
        background-image: url('/images/lab.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }
</style>

