                    @RenderBody()
                </main>
            </div>
            <footer class="footer text-muted">
                <div class="container text-center">
                    <small>by Jilliane Ruth C. Febiar</small>
                    <br />
                    <a asp-page="/Privacy" class="text-decoration-underline text-primary">
                        Privacy
                    </a>
                </div>
            </footer>

        </div>
    }

<div class="main-content" style="overflow-y: auto;">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>
