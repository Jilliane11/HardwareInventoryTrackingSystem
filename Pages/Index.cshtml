@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model HardwareInventoryTrackingSystem.Pages.IndexModel
@{
    ViewData["Title"] = "About Us";
}

<div class="container shadow-lg bg-white p-4 mt-4 rounded">
    <!-- Welcome Message -->
    <h4 class="text-primary mb-4 text-center" style="color: #2F3590;">Welcome to the Hardware Inventory Tracking System!</h4>
    <p class="text-center">
        Your one-stop solution for efficiently managing hardware borrowing in Lab Room F313.
    </p>

    <!-- About Section -->
    <div class="form-details-section mt-4">
        <h5 class="text-secondary text-center" style="color: #2F3590;">About Us</h5>
        <p class="mt-3 text-justify">
            The <strong>Hardware Inventory Tracking System</strong> is developed to enhance the borrowing process for
            <strong>Lab Room F313</strong>. This system addresses challenges in managing electronic components
            and equipment by introducing a centralized and efficient solution.
        </p>
        <p class="text-justify">
            By using this system, we ensure better accountability, streamline administrative processes, and maintain proper
            stock levels. With these improvements, students and staff can enjoy a hassle-free borrowing experience.
        </p>
    </div>

    <!-- Meet the Developer Section -->
    <div class="form-details-section mt-4">
        <h5 class="text-secondary text-center" style="color: #2F3590;">Meet the Developers</h5>
        <div class="developers d-flex justify-content-center align-items-center mt-4">
            <div class="text-center mx-3">
                <img src="~/images/febiar.jpg" alt="Jilliane Ruth Febiar" class="rounded-circle developer-photo">
                <p class="mt-2"><strong>Jilliane Ruth Febiar</strong></p>
            </div>
        
        </div>
    </div>
</div>

<style>
    /* Shared Styling */
    .container {
        max-width: 90%; /* Make the layout fluid */
        margin: 0 auto; /* Center the content */
    }

    .form-details-section {
        padding: 15px;
        background-color: #ffffff;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-bottom: 20px;
        box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1);
    }

    .text-primary {
        color: #2F3590 !important;
    }

    .text-secondary {
        color: #2F3590 !important;
    }

    /* Developer Photo Styling */
    .developer-photo {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border: 2px solid #2F3590;
    }

    /* Centered Row of Developers */
    .developers {
        display: flex;
        flex-wrap: wrap; /* Allow wrapping for smaller screens */
    }

    .developers > div {
        flex: 1 1 150px; /* Allow flexible width with a minimum size */
        max-width: 200px; /* Limit max size */
        text-align: center;
        margin: 10px;
    }

    /* Responsive Adjustments */
    media (max-width: 768px) {
        .container {
            padding: 10px; /* Add padding for smaller screens */
        }

        h4, h5 {
            font-size: 1.2rem; /* Adjust heading sizes */
        }

        .developer-photo {
            width: 80px;
            height: 80px; /* Smaller photo size */
        }
    }
</style>
