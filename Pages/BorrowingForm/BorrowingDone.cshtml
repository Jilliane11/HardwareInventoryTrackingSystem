@page
@model HardwareInventoryTrackingSystem.Pages.BorrowingForm.BorrowingDoneModel
@{
    ViewData["Title"] = "Borrowing Done";
}
<div class="thank-you-container">
    <div class="thank-you-header">
        <h1>Thank You!</h1>
    </div>
    <div class="thank-you-body">
        <p>You have successfully borrowed a component from the laboratory. Please ensure that you take care of the item during the activity period.</p>
        <p><strong>Reminder:</strong> Return the component to the laboratory on or before the due date specified. Failure to do so may result in penalties.</p>
        <p><strong>Developed By:  </strong>Jilliane Ruth Febiar</p>
  
    </div>
    <div class="thank-you-footer">
        <a href="@Url.Page("/BorrowingForm/BorrowingForm")" class="btn btn-primary">Back to HOME</a>
        <a href="@Url.Page("/History/StudentHistory")" class="btn btn-success">View</a>
       @*  <button class="btn btn-success" onclick="window.location.href='@Url.Page("/History/StudentHistory")'">View Borrow History</button> *@
    </div>
</div>

